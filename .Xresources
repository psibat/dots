xterm*vt100.metaSendsEscape: true
urxvt*vt100.metaSendsEscape: true
xterm*selectToClipboard: true
urxvt*selectToClipboard: true

!Disable annoying ISO keycap mode
urxvt*iso14755: false
urxvt*iso14755_52: false

!Ctrl+Shift+C/V support
urxvt*keysym.C-C: eval:selection_to_clipboard
urxvt*keysym.C-V: eval:paste_clipboard

!Skip word binds
urxvt.keysym.Control-Left: \033[1;5D
urxvt.keysym.Control-Right: \033[1;5C

!Font selection
xterm*font: *-fixed-*-*-*-14-*
!urxvt*font: -Misc-Fixed-Medium-R-Normal--14-130-75-75-C-70-ISO10646-1 
!urxvt*font: -gohu-*-*-*-*-*-*-*-*-*-*-*-*-*
!urxvt*font:xft:Gohu GohuFont:pixelsize=11:anti-alias=false,fixed,xft:Symbola:anti-alias=false
!urxvt*font:-*-fxd-medium-r-*-*-13-*-*-*-*-*-*-*,xft:Symbola:anti-alias=false
!urxvt*font:-sgi-screen-medium-r-*-*-10-*-*-*-*-*-*-*,xft:Symbola:anti-alias=false
urxvt*font: xft:SGI Screen:pixelsize=10,xft:Symbola:anti-alias=false

!Disable scrollbar
urxvt*scrollBar: false

!Set to 20% transparency
urxvt*transparent: true
!urxvt*tintColor: blue
urxvt*shading: 20

!Colour options
xterm*background: black
xterm*foreground: lightblue
!urxvt*background: black
!urxvt*foreground: #DDDDDD

